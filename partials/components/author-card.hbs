<section class="author-card">
  <div class="author-card__media">
    {{#if profile_image}}
      <img class="author-avatar" src="{{img_url profile_image size="s"}}" alt="{{name}}" loading="lazy"/>
    {{/if}}
  </div>
  <div class="author-card__body">
    <h1>{{name}}</h1>
    {{#if bio}}
      <p class="subtle">{{bio}}</p>
    {{/if}}
    <div class="author-card__actions">
      {{> "components/social-links"}}
      <div class="rss-inline">{{> "components/rss-link" href=(concat (url) "rss/") label="RSS feed"}}</div>
    </div>
  </div>
</section>

