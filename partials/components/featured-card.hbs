<li class="featured-card featured-row {{post_class}}">
  <a class="card-link" href="{{url}}">
    <figure class="card-media featured-row__media">
      {{#if feature_image}}
        <img src="{{img_url feature_image size="s"}}" alt="{{title}}" />
      {{/if}}
    </figure>
    <div class="featured-row__content">
      <div class="card-title">{{title}}</div>
    </div>
  </a>
</li>