<ul class="social social-icons" aria-label="Social profiles">
  {{#if website}}
    <li>
      <a
        class="icon"
        href="{{website}}"
        target="_blank"
        rel="noopener me"
        aria-label="Website"
      >
        <svg
          viewBox="0 0 24 24"
          width="16"
          height="16"
          aria-hidden="true"
        ><circle cx="12" cy="12" r="10" fill="currentColor" /></svg>
        <span class="sr-only">Website</span>
      </a>
    </li>
  {{/if}}

  {{#if twitter}}
    <li>
      <a
        class="icon"
        href="{{social_url type="twitter"}}"
        target="_blank"
        rel="noopener me"
        aria-label="Twitter"
      >
        <svg viewBox="0 0 24 24" width="16" height="16" aria-hidden="true"><text
            x="6"
            y="17"
            font-size="12"
            font-family="monospace"
            fill="currentColor"
          >X</text></svg>
        <span class="sr-only">Twitter</span>
      </a>
    </li>
  {{/if}}
  {{#if facebook}}
