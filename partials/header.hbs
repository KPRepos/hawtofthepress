<header class="site-header">
  <div class="wrap header-top">
    <div class="brand">{{#if @site.logo}}<a href="{{@site.url}}"><img
            src="{{@site.logo}}"
            alt="{{@site.title}}"
            height="36"
          /></a>{{else}}<a href="{{@site.url}}">{{@site.title}}</a>{{/if}}</div>
    <nav class="site-nav" aria-label="Primary">
      {{navigation}}
    </nav>
    <div class="actions">
      {{#if @site.members_enabled}}
        {{#unless @member}}
          <a
            class="sub-btn"
            href="#/portal/signup"
            data-open-portal
          >Subscribe</a>
          <button
            class="sub-btn alt"
            data-open-subscribe
            style="margin-left:.5rem;"
          >Alt signup</button>
        {{else}}
          <a class="sub-btn" href="#/portal/account">Account</a>
        {{/unless}}
      {{/if}}
    </div>
  </div>
  <div class="wrap header-bottom">
    <nav id="tag-filter" class="filter" aria-label="Filter by tag"></nav>
  </div>
</header>