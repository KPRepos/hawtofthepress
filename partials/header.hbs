<header class="site-header">
  <div class="wrap header-top">
    <div class="brand">{{#if @site.logo}}<a href="{{@site.url}}" rel="home"><img
            src="{{@site.logo}}"
            alt="{{@site.title}}"
            height="36"
          /></a>{{else}}<a href="{{@site.url}}" rel="home">{{@site.title}}</a>{{/if}}</div>
    <nav class="site-nav" aria-label="Primary">
      {{navigation}}
    </nav>
    <div class="actions">
      <button
        class="icon-btn search-btn"
        type="button"
        aria-label="Open search"
        data-ghost-search
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
          <circle cx="11" cy="11" r="7" fill="none" stroke="currentColor" stroke-width="2" />
          <path d="M16.5 16.5 L21 21" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
        </svg>
      </button>
      {{#if @site.members_enabled}}
        {{#unless @member}}
          <a class="sub-btn" href="#/portal/signup" data-open-portal>Subscribe</a>
          <a
            class="signin-link"
            href="#/portal/signin"
            data-open-portal
            style="margin-left:.5rem;"
          >Sign in</a>
        {{else}}
          <a class="sub-btn" href="#/portal/account">Account</a>
        {{/unless}}
      {{/if}}
    </div>
  </div>
</header>
<div class="wrap header-bottom">
  {{> "components/tag-nav"}}
</div>