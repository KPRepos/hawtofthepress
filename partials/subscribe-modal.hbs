<div class="modal-backdrop" id="subscribe-modal" aria-hidden="true">
  <div class="modal" role="dialog" aria-modal="true" aria-labelledby="sub-title">
    <h2 id="sub-title">Subscribe</h2>
    <form id="sub-form">
      <div class="row">
        <label for="sub-name">Name</label>
        <input id="sub-name" name="name" type="text" placeholder="Ada Lovelace" />
      </div>
      <div class="row">
        <label for="sub-email">Email</label>
        <input id="sub-email" name="email" type="email" placeholder="you@example.com" required />
      </div>
      <div class="actions">
        <button type="submit" class="btn">Continue</button>
        <button type="button" class="btn alt" data-close-subscribe>Cancel</button>
      </div>
      <p class="subtle" id="sub-msg" style="display:none; margin:.5rem 0 0 0;">Opening Ghost Portalâ€¦</p>
    </form>
  </div>
</div>
