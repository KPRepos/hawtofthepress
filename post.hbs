{{!< default}}
{{#post}}
  <article class="{{post_class}}">
    {{> "components/post-header"}}
    {{> "components/feature-image" img_size="xl" width="1200" height="630"}}
    <section class="post-content">
      {{content}}
    </section>
    {{> "components/subscribe-cta"}}
    {{> "components/post-nav"}}
  </article>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "{{@site.title}}",
          "item": "{{@site.url}}"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "{{title}}",
          "item": "{{url absolute='true'}}"
        }
      ]
    }
  </script>
  {{> "components/comments"}}
{{/post}}