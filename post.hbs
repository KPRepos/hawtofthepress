{{!< default}}
{{#post}}
  <article class="{{post_class}}">
    <header>
      <h1 class="post-title">{{title}}</h1>
      <div class="post-meta">
        <time
          class="date"
          datetime="{{date format="YYYY-MM-DD"}}"
        >{{date}}</time>
        {{#if tags}}<span class="tags">
            · tags:
            {{tags separator=", " autolink="true"}}</span>{{/if}}
      </div>
    </header>
    {{#if feature_image}}<figure class="feature"><img
          src="{{img_url feature_image size="xl"}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
          loading="lazy"
          decoding="async"
          width="1200"
          height="630"
        />{{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}</figure>{{/if}}
    <section class="post-content">
      {{content}}
    </section>
    {{#if @site.members_enabled}}
      {{#unless @member}}
        <section class="subscribe-cta">
          <a
            class="sub-btn"
            href="#/portal/signup"
            data-open-portal
          >Subscribe</a>
          <a class="signin-link" href="#/portal/signin" data-open-portal>Sign in</a>
          <span class="hint">Get new posts by email.</span>
        </section>
      {{/unless}}
    {{/if}}
    <nav class="post-nav">
      <div class="prev">{{#prev_post}}
          <a href="{{url}}" rel="prev" aria-label="Previous post: {{title}}">←
            {{title}}</a>{{/prev_post}}</div>
      <div class="next">{{#next_post}}<a
            href="{{url}}"
            rel="next"
            aria-label="Next post: {{title}}"
          >{{title}} →</a>{{/next_post}}</div>
    </nav>
  </article>
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "{{@site.title}}",
          "item": "{{@site.url}}"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "{{title}}",
          "item": "{{url absolute='true'}}"
        }
      ]
    }
  </script>
  {{#if comments}}<section class="comments">{{comments}}</section>{{/if}}
{{/post}}