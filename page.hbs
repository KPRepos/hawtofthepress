{{!< default}}

{{#post}}
  <article class="{{post_class}}">
    {{#if @page.show_title_and_feature_image}}
      <header>
        <h1 class="post-title">{{title}}</h1>
        {{#if feature_image}}
          <figure class="feature">
            <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" loading="lazy" decoding="async"/>
            {{#if feature_image_caption}}<figcaption>{{feature_image_caption}}</figcaption>{{/if}}
          </figure>
        {{/if}}
      </header>
    {{else}}
      <h1 class="sr-only">{{title}}</h1>
    {{/if}}
    <section class="post-content">
      {{content}}
    </section>
    {{#if comments}}<section class="comments">{{comments}}</section>{{/if}}
  </article>
{{/post}}
