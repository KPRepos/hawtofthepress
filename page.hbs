{{!< default}}

{{#post}}
  <article class="{{post_class}}">
    {{#if @page.show_title_and_feature_image}}
      {{> "components/post-header"}}
      {{> "components/feature-image" img_size="xl"}}
    {{else}}
      <h1 class="sr-only">{{title}}</h1>
    {{/if}}
    <section class="post-content">
      {{content}}
    </section>
    {{> "components/comments"}}
  </article>
{{/post}}
