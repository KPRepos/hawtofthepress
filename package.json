{
  "name": "hawtof-the-press",
  "version": "0.1.0",
  "description": "Monospace brutalist Ghost theme — vertical date • title, grey tags, SEO-friendly pages, Portal subscribe, tag filter UI.",
  "engines": {
    "ghost": ">=5.130.2",
    "node": ">=22"
  },
  "author": {
    "name": "Zach Hawtof",
    "email": "author@example.com"
  },
  "license": "MIT",
  "config": {
    "posts_per_page": 20
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "minimal",
    "brutalist",
    "monospace",
    "seo",
    "members",
    "portal"
  ],
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.5%"
  ],
  "scripts": {
    "dev": "concurrently -n theme,ghost -c magenta,cyan \"pnpm run dev:theme\" \"pnpm run ghost:dev\"",
    "dev:theme": "gulp dev",
    "build": "NODE_ENV=production gulp build",
    "zip": "NODE_ENV=production gulp zip",
    "lint": "gscan .",
    "lint:strict": "gscan --fatal .",
    "postinstall": "echo 'Run pnpm dev to start the build watcher'",
    "ghost:dev": "cd ../ghost && ghost run -D",
    "ghost:start": "cd ../ghost && ghost start -D",
    "ghost:stop": "cd ../ghost && ghost stop"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "cssnano": "^7.1.0",
    "del": "^8.0.0",
    "gscan": "^5.0.0",
    "gulp": "^5.0.1",
    "gulp-postcss": "^10.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-zip": "^6.1.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2"
  }
}
