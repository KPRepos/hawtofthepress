{
  "name": "hawtofthepress",
  "version": "1.2.0",
  "description": "Monospace brutalist Ghost theme — vertical date • title, grey tags, SEO-friendly pages, Portal subscribe, tag filter UI.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhawtof/hawtofthepress.git"
  },
  "bugs": {
    "url": "https://github.com/zhawtof/hawtofthepress/issues"
  },
  "homepage": "https://github.com/zhawtof/hawtofthepress#readme",
  "engines": {
    "ghost": ">=5.130.2",
    "node": ">=22"
  },
  "author": {
    "name": "Zach Hawtof",
    "email": "author@example.com"
  },
  "license": "MIT",
  "config": {
    "posts_per_page": 20,
    "custom": {
      "font_size": {
        "label": "Base font size",
        "type": "select",
        "options": ["Small", "Medium", "Large", "Extra Large"],
        "default": "Medium",
        "description": "Controls the base font size used across the site"
      },
      "content_width": {
        "label": "Content width",
        "type": "select",
        "options": ["Narrow", "Default", "Wide"],
        "default": "Default",
        "description": "Max width of content wrapper"
      },
      "primary_color_light": {
        "label": "Primary color (light)",
        "type": "color",
        "default": "#0645ad",
        "description": "Primary/link color for light theme"
      },
      "primary_color_dark": {
        "label": "Primary color (dark)",
        "type": "color",
        "default": "#ffd166",
        "description": "Primary/link color for dark theme"
      },
      "background_color_light": {
        "label": "Background (light)",
        "type": "color",
        "default": "#ffffff",
        "description": "Background color for light theme"
      },
      "text_color_light": {
        "label": "Text (light)",
        "type": "color",
        "default": "#000000",
        "description": "Text color for light theme"
      },
      "background_color_dark": {
        "label": "Background (dark)",
        "type": "color",
        "default": "#14171a",
        "description": "Background color for dark theme"
      },
      "text_color_dark": {
        "label": "Text (dark)",
        "type": "color",
        "default": "#dde1e5",
        "description": "Text color for dark theme"
      },
      "code_block_font_size": {
        "label": "Code block font size",
        "type": "select",
        "options": ["Match base", "Smaller (n-1)", "Smaller (n-2)", "Smaller (n-3)"],
        "default": "Smaller (n-1)",
        "description": "Font size for fenced code blocks (<pre><code>) relative to the base size"
      }
    }
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "minimal",
    "brutalist",
    "monospace",
    "seo",
    "members",
    "portal"
  ],
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.5%"
  ],
  "scripts": {
    "dev": "concurrently -n theme,ghost -c magenta,cyan \"pnpm run dev:theme\" \"pnpm run ghost:dev\"",
    "dev:theme": "gulp dev",
    "build": "NODE_ENV=production gulp build",
    "zip": "NODE_ENV=production gulp zip",
    "prepare": "husky",
    "lint": "gscan .",
    "lint:strict": "gscan --fatal .",
    "postinstall": "echo 'Run pnpm dev to start the build watcher'",
    "ghost:dev": "cd ../ghost && ghost run -D",
    "ghost:start": "cd ../ghost && ghost start -D",
    "ghost:stop": "cd ../ghost && ghost stop"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "cssnano": "^7.1.0",
    "del": "^8.0.0",
    "gscan": "^5.0.0",
    "gulp": "^5.0.1",
    "gulp-postcss": "^10.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-zip": "^6.1.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7"
  }
}
